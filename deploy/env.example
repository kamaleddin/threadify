# Application Environment
APP_ENV=development

# Database
DATABASE_URL=sqlite:///./data/threadify.db

# Security - AES Encryption Key (32 bytes base64url encoded)
# Generate with: python -c "import secrets; import base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
SECRET_AES_KEY=your-32-byte-base64url-encoded-key-here

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twitter/X OAuth (will be configured in Prompt 10)
X_CLIENT_ID=your-x-client-id-here
X_CLIENT_SECRET=your-x-client-secret-here
OAUTH_REDIRECT_URL=https://social.capturia.ca/oauth/x/callback

# Internal Services
LENGTH_SERVICE_URL=http://length:8080

# Basic Auth (will be configured in Prompt 18)
BASIC_AUTH_USER=kamaleddin
# Generate hash with: caddy hash-password --plaintext 'your-password'
BASIC_AUTH_HASH=your-bcrypt-hash-here

# Timezone
TZ=America/Toronto

# Cloudflared (optional - for production deployment)
# CLOUDFLARED_TOKEN=your-cloudflare-tunnel-token-here
